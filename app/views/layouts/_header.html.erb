<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "勤怠管理web", root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        
          <% attendances = Attendance.where(overtime_request: "1", overtime_approval: nil) %>
          <% num = attendances.count %>
          <% if num >= 1 %>
            <li><%= link_to "残業申請者が#{num}名います", root_path, class: "abc" %></li>
          <% else  %>
            <li><%= link_to "トップへ", root_path %></li>
          <% end %>
        
        <% if logged_in? %>
          <% if current_user.admin? %>
            <li><%= link_to "従業員一覧", users_path %></li>
            <li><%= link_to "出勤中従業員", working_user_path %></li>
            <li><%= link_to "基本情報の修正", edit_basic_info_user_path(current_user) %></li>
          <% end %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
             アカウント <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "勤怠", current_user %></li>
              <li><%= link_to "設定", edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to "ログアウト", logout_path, method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to "ログイン", login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>