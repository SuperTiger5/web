<% provide(:title, "出勤従業員一覧") %>

<%= link_to "大阪本店の出勤者一覧", working_user_osaka_path, class: "btn btn-success btn-place btn-place" %>
<%= link_to "東京支店の出勤者一覧", working_user_tokyo_path, class: "btn btn-warning btn-place btn-place" %>
<%= link_to "名古屋支店の出勤者一覧", working_user_nagoya_path, class: "btn btn-info btn-place btn-place" %>

<table class="table table-striped table-bordered table-work">
  <thead>
    <tr>
      <th>出勤者一覧</th>
      <th><%= User.human_attribute_name :work_place_of_user %></th>
    </tr>
  </thead>
  
  <tbody>
    <% @attendances.each do |attendance| %>
    <tr>
      <td><%= link_to User.find(attendance.user_id).name, user_path(attendance.user_id) %></td>
      <td><%= User.find(attendance.user_id).work_place_of_user %></td>
    </tr>
    <% end %>
  </tbody>
</table>
