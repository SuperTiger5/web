<%= form_with(model: @user, local: true) do |f| %>
      <%= render 'shared/error_messages', object: @user %>
    
      <%= f.label :name, class: "label-user--edit" %>
      <%= f.text_field :name, class: "form-control" %>

      <%= f.label :email, class: "label-user--edit" %>
      <%= f.email_field :email, class: "form-control" %>
      
      <%= f.label :department, class: "label-user--edit" %>
      <%= f.text_field :department, class: "form-control" %>
      
      <%= f.label :work_place_of_user, class: "label-user--edit" %>
      <%= f.select :work_place_of_user, {'大阪市': "大阪市", '堺市': '堺市', '神戸市': '神戸市'}, { include_blank: '選択してください'}, { class: 'form-control' , required: true } %>

      <%= f.label :password, class: "label-user--edit}" %>
      <%= f.password_field :password, class: "form-control" %>

      <%= f.label :password_confirmation, class: "label-user--edit" %>
      <%= f.password_field :password_confirmation, class: "form-control" %>

      <%= f.submit yield(:button_text), class: "btn btn-primary btn-block btn-user--edit" %>
<% end %>